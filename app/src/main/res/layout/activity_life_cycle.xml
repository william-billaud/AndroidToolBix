<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LifeCycleActivity">

    <TextView
            android:text="@string/textview"
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:id="@+id/lfTextView" android:textSize="12sp"
            tools:text="RIEN" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/lifeCycleFragment" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentSwitcher" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.285"/>
    <fragment
            android:layout_width="324dp"
            android:layout_height="338dp" android:name="fr.isen.billaud.androidtoolbox.LifeCycleFragment"
            android:id="@+id/lifeCycleFragment" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.492"
            tools:layout="@layout/fragment_life_cycle"/>
    <Button
            android:text="@string/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentSwitcher" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>